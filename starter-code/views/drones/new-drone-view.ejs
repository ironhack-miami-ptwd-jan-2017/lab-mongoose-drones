<h2> Add a New Drone </h2>

<form method="post" action="/drones">
  <div>
    <label for="drone-name-input"> Model Name </label>
    <input  id="drone-name-input" type="text" name="droneName">
  </div>

  <div>
    <label for="propellers-input"> Propellers </label>
    <input  id="propellers-input" type="number" name="propellers">
  </div>

  <div>
    <label for="max-speed-input"> Maximum Speed </label>
    <input  id="max-speed-input" type="number" name="maxSpeed">
  </div>

  <button> Add This Drone </button>
</form>
